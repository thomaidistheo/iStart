{
    "manifest_version": 2,
    "name": "iOS New Tab",
    "description": "An iOS inspired homepage.",
    "version": "1.2",
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "browser_action": {
        "default_icon": "/assets/photos/favicon-4.png",
        "default_popup": "/todo app/todo.html",
        "default_title": "ToDo List"
    },
    "permission": [
        "tabs"
    ],
    "background": {
        "scripts": [
            "/assets/js/greeting.js"
        ],
        "persistent": false
    }
}